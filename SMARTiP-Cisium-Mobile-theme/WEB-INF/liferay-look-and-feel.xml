<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.1.0+</version>
	</compatibility>
	<theme id="SMARTiP-Cisium-Mobile" name="SMARTiP Cisium Mobile" >
		<settings>
			<setting key="portlet-setup-show-borders-default" value="true"/>
		</settings>
		<color-scheme id="01" name="default">
	        <css-class></css-class>
	        <color-scheme-images-path>${images-path}</color-scheme-images-path>
     	</color-scheme>
     	<color-scheme id="02" name="essential">
	        <css-class>essential</css-class>
	        <color-scheme-images-path>${images-path}/color_schemes/${css-class}</color-scheme-images-path>
	    </color-scheme>
	</theme>
</look-and-feel>